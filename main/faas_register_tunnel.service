[Unit]
Description=FAAS register Reverse Tunnel with Auto Certificate Renewal (%i)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=%i
Environment=INSTANCE=%i
ExecStart=/usr/local/sbin/faas_register_tunnel.sh

Restart=always
RestartSec=5
StartLimitIntervalSec=60
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
